        mc:Ignorable="d"
        Title="File Transfer" Height="350" Width="350" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Icon="NetGlobe.ico" Background="White" FontSize="12" BorderThickness="2" BorderBrush="Gray">
